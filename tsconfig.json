{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "module": "CommonJS",
        "moduleDetection": "force",
        "outDir": "dist",
        "target": "es2020",
        "typeRoots": ["./node_modules/@types", "src/@types"],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "data",
        "src/**/*"
    ]
}